{
  "tests": [
    {
      "name": "Login with valid credentials",
      "method": "POST",
      "body": {
        "email": "test@example.com",
        "password": "password123"
      },
      "expectedStatus": 200,
      "expectedBody": {
        "success": true,
        "token": "string",
        "user": {
          "id": "number",
          "email": "string",
          "role": "string"
        }
      },
      "bodyMatcher": "partial"
    },
    {
      "name": "Reject invalid credentials",
      "method": "POST",
      "body": {
        "email": "wrong@example.com",
        "password": "wrongpassword"
      },
      "expectedStatus": 401,
      "expectedBody": {
        "error": "string"
      },
      "bodyMatcher": "partial"
    }
  ]
}
